<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOnboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_premium_radial"
    android:clickable="true"
    android:focusable="true">

    <!-- Premium Background Gradient Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_premium_aurora"
        android:alpha="0.15" />

    <!-- Premium Center Stack -->
    <LinearLayout
        android:id="@+id/centerStack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <!-- Premium Glass Icon Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iconCard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardBackgroundColor="@color/theme_glass"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/imgShield"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:contentDescription="Shield"
                android:src="@drawable/ic_shield_outline_white"
                app:tint="@color/theme_primary" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp" />

        <!-- Premium Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam Shield"
            android:textColor="@color/theme_text_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="-0.02"
            android:includeFontPadding="false" />

        <!-- Premium Decorative Line -->
        <LinearLayout
            android:id="@+id/decorRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="72dp"
                android:layout_height="2dp"
                android:background="@color/theme_primary" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_premium_fab" />

            <View
                android:layout_width="72dp"
                android:layout_height="2dp"
                android:background="@color/theme_primary" />
        </LinearLayout>

        <!-- Premium Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="AI-Powered Message Protection"
            android:textColor="@color/theme_text_secondary"
            android:textSize="18sp"
            android:letterSpacing="0.02"
            android:includeFontPadding="false" />

        <!-- Premium Page Indicators -->
        <LinearLayout
            android:id="@+id/dotsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0.4"
                android:background="@drawable/bg_premium_fab" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:alpha="1.0"
                android:background="@drawable/bg_premium_fab" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:alpha="0.4"
                android:background="@drawable/bg_premium_fab" />
        </LinearLayout>

    </LinearLayout>

    <!-- Premium Continue Text -->
    <TextView
        android:id="@+id/tvTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to begin"
        android:textColor="@color/theme_text_muted"
        android:textSize="16sp"
        android:letterSpacing="0.08"
        android:textAllCaps="true"
        android:includeFontPadding="false"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
