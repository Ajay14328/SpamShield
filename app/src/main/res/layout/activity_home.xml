<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:fitsSystemWindows="true">

    <!-- Premium Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomSafeArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom safe area wrapper (prevents cut on gesture/3-button nav phones) -->
    <LinearLayout
        android:id="@+id/bottomSafeArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Premium Navigation Divider -->
        <View
            android:id="@+id/navDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_border" />

        <!-- Premium Bottom Navigation Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="88dp"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="0dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <!-- Premium Messages Tab -->
                <LinearLayout
                    android:id="@+id/tabMessages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/theme_primary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/ivMessages"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_messages_outline"
                            app:tint="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvMessages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Protect"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:textAllCaps="true"
                        android:textColor="@color/theme_primary" />
                </LinearLayout>

                <!-- Premium Dashboard Tab -->
                <LinearLayout
                    android:id="@+id/tabDashboard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/theme_glass"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivDashboard"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_trending_up_white"
                            app:tint="@color/theme_text_muted" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Neural"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:textAllCaps="true"
                        android:textColor="@color/theme_text_muted" />
                </LinearLayout>

                <!-- Premium Settings Tab -->
                <LinearLayout
                    android:id="@+id/tabSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/theme_glass"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivSettings"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings_outline"
                            app:tint="@color/theme_text_muted" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Config"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:textAllCaps="true"
                        android:textColor="@color/theme_text_muted" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
